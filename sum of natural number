import java.util.Scanner;
public class sum{
    public static void main(String[] arg){
        Scanner sc = new Scanner(System.in);
        int n = sc.nextInt();
        System.out.println("my n is:"+n);
        int sum=0;
        int i=1;
        while(i<=n){
            sum=sum+i;
            //System.out.println("sum of  n  natural number is:"+ sum);
            i++; 
         //System.out.println("sum of  n  natural number is:"+ sum);   
        }
         System.out.println("sum of  n  natural number is:"+ sum);
